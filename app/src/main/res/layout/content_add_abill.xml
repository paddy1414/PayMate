<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.aisling.finalprojectaislingstafford.AddABill"
    tools:showIn="@layout/activity_add_abill">

    <TextView
        android:id="@+id/bill_typelbl"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginTop="10dp"
        android:text="Bill Type:"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="22sp"
        android:textColor="#663b77"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/amount_lbl"
        app:layout_constraintRight_toRightOf="@+id/amount_lbl"
        app:layout_constraintTop_toBottomOf="@+id/amount_lbl"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/amount_box"
        android:layout_width="201dp"
        android:layout_height="38dp"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:inputType="textMultiLine|textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/bill_typelbl"
        app:layout_constraintLeft_toLeftOf="@+id/bill_type_i_owed"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/amount_lbl"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginTop="6dp"
        android:text="Amount:"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="22sp"
        android:textColor="#663b77"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        app:layout_constraintLeft_toLeftOf="@+id/textView3"
        app:layout_constraintRight_toRightOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="24sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/bill_namelbl"
        android:layout_marginTop="59dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/bill_namelbl"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/bill_type_i_owed"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:layout_marginBottom="18dp"
        android:ems="10"
        android:inputType="textMultiLine|textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/amount_box"
        app:layout_constraintLeft_toRightOf="@+id/bill_namelbl"
        app:layout_constraintTop_toTopOf="@+id/bill_namelbl"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/bill_namelbl"
        android:layout_width="144dp"
        android:layout_height="0dp"
        android:text="Title:"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="22sp"
        android:textColor="#663b77"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/bill_type_spin"
        android:layout_width="200dp"
        android:layout_height="27dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amount_lbl"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/btn_save_bill"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:layout_marginEnd="34dp"
        android:text="Save"
        android:background="#4d004d"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginRight="34dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/users_in_groupAdd"
        app:layout_constraintVertical_bias="0.964" />

    <TextView
        android:id="@+id/user_in_grouplbl"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="50dp"

        android:text="Users Involved:"
        android:textSize="22sp"
        android:textColor="#663b77"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="@+id/bill_typelbl"
        app:layout_constraintRight_toRightOf="@+id/bill_typelbl"
        app:layout_constraintTop_toTopOf="@+id/bill_typelbl"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ListView
        android:id="@+id/users_in_groupAdd"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_in_grouplbl"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />


</android.support.constraint.ConstraintLayout>
