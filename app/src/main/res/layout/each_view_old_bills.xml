<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/bill_histry_date"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/bill_history_name"

        android:layout_below="@+id/bill_history_name"
        android:layout_marginTop="26dp"
        android:layout_weight="0.12"
        android:text="TextView"
        android:textAlignment="textStart" />

    <TextView
        android:id="@+id/bill_history_name"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="21dp"

        android:layout_weight="0.12"
        android:text="TextView"
        android:textAlignment="textStart"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/bill_history_type"
        android:layout_width="150dp"
        android:layout_height="30dp"

        android:layout_alignBaseline="@+id/bill_histry_date"
        android:layout_alignBottom="@+id/bill_histry_date"
        android:layout_alignStart="@+id/bill_history_amount"
        android:layout_weight="0.12"
        android:text="TextView"
        android:textAlignment="textStart" />

    <TextView
        android:id="@+id/bill_history_amount"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_weight="0.12"
        android:text="TextView"
        android:textAlignment="textStart"

        android:layout_alignTop="@+id/bill_history_name"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/bill_histry_date" />


</RelativeLayout>
