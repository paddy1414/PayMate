<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aisling.finalprojectaislingstafford.UpdateGroupGoal">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_update_group_goal" />

    <TextView
        android:id="@+id/Goal_namelbl"
        android:layout_width="120dp"
        android:layout_height="38dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:text="Goal Name:"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="22sp"
        android:textColor="#663b77"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/GoalName_box"
        android:layout_width="201dp"
        android:layout_height="38dp"
        android:layout_marginTop="95dp"
        android:layout_marginLeft="150dp"
        android:ems="10"
        android:inputType="textMultiLine|textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/bill_typelbl"
        app:layout_constraintLeft_toLeftOf="@+id/bill_type_i_owed"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/Goal_targetlbl"
        android:layout_width="120dp"
        android:layout_height="58dp"
        android:layout_marginTop="165dp"
        android:layout_marginLeft="20dp"
        android:text="Goal Target Amount:"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="22sp"
        android:textColor="#663b77"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/GoalTarget_box"
        android:layout_width="201dp"
        android:layout_height="38dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="150dp"
        android:ems="10"
        android:inputType="textMultiLine|textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/bill_typelbl"
        app:layout_constraintLeft_toLeftOf="@+id/bill_type_i_owed"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/Goal_currentlbl"
        android:layout_width="120dp"
        android:layout_height="58dp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="20dp"
        android:text="Goal Current Amount:"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="22sp"
        android:textColor="#663b77"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/GoalCurrent_box"
        android:layout_width="201dp"
        android:layout_height="38dp"
        android:layout_marginTop="265dp"
        android:layout_marginLeft="150dp"
        android:ems="10"
        android:inputType="textMultiLine|textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/bill_typelbl"
        app:layout_constraintLeft_toLeftOf="@+id/bill_type_i_owed"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />


    <Button
        android:id="@+id/btn_update_Goal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"


        android:layout_marginTop="450dp"
        android:layout_marginLeft="45dp"
        android:text="Update Goal"
        android:background="#4d004d"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/users_in_group"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1" />

</android.support.design.widget.CoordinatorLayout>
