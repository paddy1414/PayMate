<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/image_for_user"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:src="@drawable/paymatelogo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/users_name_for_listOwe"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/image_for_user"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="21dp"
        android:layout_toEndOf="@+id/image_for_user"
        android:layout_weight="0.12"
        android:text="TextView"
        android:textAlignment="textStart" />

    <Button
        android:id="@+id/btn_pay_back"
        android:layout_width="40pt"
        android:layout_height="40dp"
        android:layout_marginLeft="280dp"
        android:text="Pay Back"
        android:background="#4d004d"
        android:textColor="@android:color/white"
        android:layout_marginTop="66dp" />

    <TextView
        android:id="@+id/bill_type_i_owed"
        android:layout_width="90dp"
        android:layout_height="34dp"
        android:layout_marginTop="20dp"
        android:text="TextView"
        android:layout_marginLeft="175dp" />

    <TextView
        android:id="@+id/amount_i_owed"
        android:layout_width="90dp"
        android:layout_height="34dp"
        android:layout_marginLeft="285dp"
        android:layout_marginTop="20dp"
        android:text="TextView" />

</RelativeLayout>