<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aisling.finalprojectaislingstafford">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Services.AppController"
        android:allowBackup="true"
        android:icon="@drawable/paymatelogo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".RegisterNextActivity" />
        <activity
            android:name=".AddABill"
            android:label="@string/title_activity_add_abill"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".OutStandingPayment"
            android:label="@string/title_activity_out_standing_payment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddGroupGoal"
            android:label="@string/title_activity_group_goals"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewOldBills"
            android:label="@string/title_activity_view_old_bills"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewSavingsGoalsActivity"
            android:label="@string/title_activity_savings_goal"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PaymentOptionsActivity"
            android:label="@string/title_activity_payment_options"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UpdateGroupGoal"
            android:label="@string/title_activity_update_group_goal"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>